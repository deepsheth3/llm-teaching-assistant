# LLM Teaching Assistant Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# OPTIONAL - API Settings
# =============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Debug mode (set to true for development)
DEBUG=false

# =============================================================================
# OPTIONAL - Model Settings
# =============================================================================

# OpenAI models
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o
LESSON_MODEL=gpt-4o-mini

# =============================================================================
# OPTIONAL - GROBID Settings
# =============================================================================

# GROBID service URL (for PDF parsing)
# Use the cloud service or run locally
GROBID_URL=https://kermitt2-grobid.hf.space

# GROBID timeout in seconds
GROBID_TIMEOUT=120

# Set to false to use abstract-only mode (no PDF parsing)
USE_GROBID=true

# =============================================================================
# OPTIONAL - File Paths
# =============================================================================

# Data directory
DATA_DIR=data

# FAISS index path
FAISS_INDEX_PATH=data/faiss/papers.index

# URLs JSON path
URLS_JSON_PATH=data/faiss/urls.json

# Cache directory
CACHE_DIR=data/cache

# =============================================================================
# OPTIONAL - Cache Settings
# =============================================================================

# Enable/disable caching
CACHE_ENABLED=true

# Cache TTL in seconds (default: 24 hours)
CACHE_TTL=86400

# =============================================================================
# OPTIONAL - Rate Limiting
# =============================================================================

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Requests per window
RATE_LIMIT_REQUESTS=30

# Window size in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# OPTIONAL - Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=text
